{
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "cryental/lumen-artisan-serve": "^1.5",
        "fakerphp/faker": "^1.9.1",
        "fideloper/proxy": "^4.4",
        "http-interop/http-factory-guzzle": "^1.0",
        "illuminate/redis": "^8.46",
        "intervention/image": "^2.5",
        "jikan-me/jikan": "^2.0",
        "laravel/lumen-framework": "^8.0",
        "laravel/scout": "^9.1",
        "league/flysystem": " ~1.0",
        "maxsky/lumen-app-key-generator": "^1.0",
        "spatie/laravel-responsecache": "^7.0",
        "staudenmeir/eloquent-has-many-deep": "^1.13",
        "teamtnt/laravel-scout-tntsearch-driver": "^11.5"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers.php"
        ],
        "classmap": [
            "app/Classes"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi"
        ],
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi"
        ]
    }
}
